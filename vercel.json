{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/healthz",
      "dest": "/api/healthz.js"
    },
    {
      "src": "/api/pastes",
      "methods": ["POST"],
      "dest": "/api/pastes/index.js"
    },
    {
      "src": "/api/pastes/([^/]+)",
      "dest": "/api/pastes/[id].js?id=$1"
    },
    {
      "src": "/p/([^/]+)",
      "dest": "/api/p/[id].js?id=$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}
