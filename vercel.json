{
  "version": 2,
  "buildCommand": "cd frontend && npm install && npm run build",
  "installCommand": "npm install",
  "outputDirectory": "frontend/build",
  "rewrites": [
    {
      "source": "/api/healthz",
      "destination": "/api/healthz.js"
    },
    {
      "source": "/api/pastes",
      "destination": "/api/pastes/index.js"
    },
    {
      "source": "/api/pastes/:id",
      "destination": "/api/pastes/[id].js"
    },
    {
      "source": "/p/:id",
      "destination": "/api/p/[id].js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}